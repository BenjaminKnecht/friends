<h1>Listing friends</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Area</th>
    <th>Last contact</th>
    <th>Last meeting</th>
    <th>Location 0</th>
    <th>Location 1</th>
    <th>Location 2</th>
    <th>Next meeting</th>
    <th>Contact interval</th>
    <th>Meeting interval</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @friends.each do |friend| %>
  <tr>
    <td><%= friend.name %></td>
    <td><%= friend.area %></td>
    <td><%= friend.last_contact %></td>
    <td><%= friend.last_meeting %></td>
    <td><%= friend.location_0 %></td>
    <td><%= friend.location_1 %></td>
    <td><%= friend.location_2 %></td>
    <td><%= friend.next_meeting %></td>
    <td><%= friend.contact_interval %></td>
    <td><%= friend.meeting_interval %></td>
    <td><%= link_to 'Show', friend %></td>
    <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
    <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

